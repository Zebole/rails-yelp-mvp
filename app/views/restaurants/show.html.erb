<h1>
  <%= @restaurant.name %>
</h1>

<p>
  Address: <%= @restaurant.address %>
</p>

<p>
  Category: <%= @restaurant.category %>
</p>

<%= link_to "See all Restaurants",
  restaurants_path, class: "btn btn-primary" %>

<%= link_to "Update Restaurant",
  edit_restaurant_path, class: "btn btn-primary" %>

<%= link_to "Delete Restaurant",
  restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
